@model IEnumerable<Day3.Factions.Models.Person>

@{
    ViewBag.Title = "Crew";
}

@section Header
{
    <div class="main-page-header-container">
        <div class="main-page-header">
            <h1>Welcome to a strange useless space community</h1>
            <h4>Here you can see a variety of creatures belonging to DARK or LIGHT faction.</h4>
            <h5>And may the Force be with you ^_^</h5>
            <hr />
        </div>
    </div>
}

@section Body
{
    <div class="centered-50">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "DisplayPerson", new {id = item.Id})
                    </td>
                </tr>
            }
        </table>
    </div>
}

@section Footer
{
    <div class="main-page-footer">
        <div class="centered-33">
            <img src="../../Content/imgs/which_side_50px.png"/>
            <h4>We would be honored if you would join us! (c)</h4>
        </div>
    </div>
}
